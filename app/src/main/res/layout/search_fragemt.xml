<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/red1"
            android:textColor="@color/btn_setting_text_color"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/iv_get_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/fx_xx" />

            <ImageView
                android:id="@+id/iv_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/xh_rili" />

            <TextView
                android:id="@+id/tv_search_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:text="170****1513"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_search_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:drawableLeft="@drawable/fx_jb"
                android:text="1000积分"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_search_school"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/fx_sxy"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="管金商学院" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_rank_store"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/fx_jfsc"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="积分商城" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:clickable="true"

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                android:src="@drawable/xh_jinqiu" />

            <TextView
                android:id="@+id/tv_search_moreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:drawableRight="@drawable/fx_more"
                android:text="更多"
                android:textColor="@color/black_overlay" />
            <TextView
                android:id="@+id/text_Wonderful_activities"
                android:text="精彩活动"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/re_message_center"
                android:background="@drawable/btn_select_state_color"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_msg_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/fx_xxzx"
                    android:drawablePadding="10dp"
                    android:text="消息中心" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fx_more"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/imageView5"/>
            </RelativeLayout>

            <View
                android:layout_marginLeft="50dp"
                style="@style/view_math_perent"/>


            <RelativeLayout
                android:id="@+id/re_risk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_select_state_color">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/fx_xxzx"
                    android:drawablePadding="10dp"
                    android:text="风险偏好" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fx_more" />
            </RelativeLayout>
        </LinearLayout>
        <!--第二个-->
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/re_introd_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_select_state_color">

                <TextView
                    android:id="@+id/textVie6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/fx_xxzx"
                    android:drawablePadding="10dp"
                    android:text="产品介绍" />

                <ImageView
                    android:id="@+id/imageViw5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fx_more" />
            </RelativeLayout>

            <View
                android:layout_marginLeft="50dp"
                style="@style/view_math_perent"/>


            <RelativeLayout
                android:id="@+id/re_help_center"
                android:background="@drawable/btn_select_state_color"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:text="帮助中心"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/fx_xxzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView8"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fx_more"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/imageView8"/>
            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/re_about"
                    android:background="@drawable/btn_select_state_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:text="关注我们"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/fx_xxzx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:id="@+id/textView6ds"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fx_more"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/imageView5sd"/>
                </RelativeLayout>

                <View
                    android:layout_marginLeft="50dp"
                    style="@style/view_math_perent"/>
                <RelativeLayout
                    android:id="@+id/re_about_guanjindai"
                    android:background="@drawable/btn_select_state_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:text="关于管金贷"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/fx_xxzx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:id="@+id/textView9"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fx_more"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/imageView9"/>
                </RelativeLayout>

                <View
                    android:layout_marginLeft="50dp"
                    style="@style/view_math_perent"/>
                <RelativeLayout
                    android:id="@+id/re_mortgage"
                    android:background="@drawable/btn_select_state_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:text="我要按揭"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/fx_xxzx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:id="@+id/textVew9"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fx_more"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/imageiew9"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--关于版本-->
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/re_about_edition"
                android:background="@drawable/btn_select_state_color"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:text="关于版本"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/fx_xxzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textiew6"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fx_more"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/imageVhhiew5"/>
            </RelativeLayout>
        </LinearLayout>
        <!--服务热线-->
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:background="@drawable/fragment_find_tel"
                android:layout_width="200dp"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/xh_call"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/black"
                    android:text="热线电话：XXX-XXX-XXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="17dp"
                    android:textSize="10dp"
                    android:text="每日工作时间:9:00-17:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>